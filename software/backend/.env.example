# AyuSure Backend API Environment Variables
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ayusure
REDIS_URL=redis://localhost:6379/0

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO

# Testing Configuration (optional)
TEST_MONGODB_URI=mongodb://localhost:27017/ayusure_test
TEST_REDIS_URL=redis://localhost:6379/15

# Production Configuration (set these in production)
# SECRET_KEY=production-secret-key
# JWT_SECRET_KEY=production-jwt-secret-key
# MONGODB_URI=mongodb://production-host:27017/ayusure
# REDIS_URL=redis://production-host:6379/0