{
    "cli": {
        "version": ">= 5.4.0"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "ios": {
                "simulator": true
            }
        },
        "preview": {
            "android": {
                "buildType": "apk",
                "gradleCommand": ":app:assembleRelease"
            },
            "ios": {
                "simulator": true,
                "buildConfiguration": "Release"
            }
        },
        "production": {
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "buildConfiguration": "Release"
            }
        }
    },
    "submit": {
        "production": {}
    }
}