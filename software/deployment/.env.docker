# Docker Environment Configuration for AyuSure Backend

# Application Environment
FLASK_ENV=production
DEBUG=False

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production-please
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-please

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_mongo_password_123
MONGO_DATABASE=ayusure
MONGODB_URI=mongodb://admin:secure_mongo_password_123@mongodb:27017/ayusure?authSource=admin

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_123
REDIS_URL=redis://:secure_redis_password_123@redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://:secure_redis_password_123@redis:6379/1
CELERY_RESULT_BACKEND=redis://:secure_redis_password_123@redis:6379/2

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/ayusure.log

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://:secure_redis_password_123@redis:6379/3

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Backup Configuration (Optional)
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30